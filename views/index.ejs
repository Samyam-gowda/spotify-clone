      });

      let playBtn9 = document.querySelector(".pp9");
      playBtn9.addEventListener("click", () => {
        aud9.play();
        playBtn9.addEventListener("dblclick", () => {
          aud9.pause();
        });
        aud2.pause();
        aud1.pause();
        aud3.pause();
        aud4.pause();
        aud5.pause();
